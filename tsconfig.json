{
    "compilerOptions":{
        "strict":true,
        "lib":["dom","ESNext"],
        "target":"ESNext",
        "esModuleInterop":true,
        "baseUrl":".",
        "moduleResolution":"node",
        "types":[
            "svelte",
            "classnames"
        ],
        "paths":{
            "components/*":["web/components/*"],
            "css/*":["web/css/*"],
            "apis/*":["web/apis/*"]
        }
    },
    "include":[
        "**/*.ts",
        "**/*.d.ts"
    ],
    "exclude":[
        "node_modules"
    ]
}